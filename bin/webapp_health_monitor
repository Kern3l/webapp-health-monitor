#!/usr/bin/env python
import argparse
from webapp_health_monitor.configuration_loader import ConfigurationLoader

if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    parser.add_argument('settings', type=str)
    args = parser.parse_args()
    verification_suit = ConfigurationLoader().load(args.settings)
    result = verification_suit.run()
    print(result.report())
